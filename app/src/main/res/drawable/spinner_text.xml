<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorWhite" />
            <gradient android:angle="-90" android:startColor="@color/colorGold" android:endColor="@color/colorGold"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorWhite" />
            <solid android:color="@color/colorGold"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/iron" />
            <gradient android:angle="-90" android:startColor="@color/colorGold" android:endColor="@color/colorGold" />
        </shape>
    </item>
</selector>