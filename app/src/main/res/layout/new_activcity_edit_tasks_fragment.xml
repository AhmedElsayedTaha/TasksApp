            <TextView
                android:id="@+id/textViewGuideGame"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="@string/guideName"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@android:color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/end" />

            <TextView
                android:id="@+id/guideName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="38dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tasks_heads_background"
                android:gravity="center"
                android:textColor="#B99930"
                android:padding="2dp"
                android:textAlignment="gravity"
                app:layout_constraintEnd_toStartOf="@+id/textViewGuideGame"
                app:layout_constraintRight_toLeftOf="parent"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/end"
                app:layout_constraintWidth_percent="0.67" />



            <TextView
                android:id="@+id/textViewGuidePhone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="@string/guidePhone"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@android:color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewGuideGame" />

            <TextView
                android:id="@+id/guidePhoneTv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tasks_heads_background"
                android:gravity="center"
                android:textColor="#B99930"
                android:padding="2dp"
                android:textAlignment="gravity"
                app:layout_constraintEnd_toStartOf="@+id/textViewGuidePhone"
                app:layout_constraintRight_toLeftOf="parent"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/textViewGuideGame"
                app:layout_constraintWidth_percent="0.67" />



            <LinearLayout
                android:id="@+id/homeNoLin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewGuidePhone">

                <TextView
                    android:id="@+id/houseIDs"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@drawable/tasks_heads_background"
                    android:gravity="center"
                    android:textColor="#B99930" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/houseNo"
                    android:textColor="@android:color/black" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/visitNoLin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeNoLin">

                <TextView
                    android:id="@+id/pilgrimsNo"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@drawable/tasks_heads_background"
                    android:gravity="center"
                    android:textColor="#B99930" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/pilgrimsNo"
                    android:textColor="@android:color/black" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/respPersonLin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/visitNoLin">

                <TextView
                    android:id="@+id/userResponsible"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@drawable/tasks_heads_background"
                    android:gravity="center"
                    android:textColor="#B99930" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/responsible_person"
                    android:textColor="@android:color/black" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/arrTimeLin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/respPersonLin">

                <TextView
                    android:id="@+id/arrivalTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@drawable/tasks_heads_background"
                    android:gravity="center"
                    android:textColor="#B99930" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/arrivedTime"
                    android:textColor="@android:color/black" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/noteLin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/arrTimeLin"
               >

                <TextView
                    android:id="@+id/notes"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@drawable/tasks_heads_background"
                    android:gravity="center"
                    android:textColor="#B99930" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/notes"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
